<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ps_popup"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llimgCross"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgCrossBtnBlank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/home_popup_close_icon"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtStaticHeader"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Select Email ID"
                android:textColor="#EA5100"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imgCrossBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/op_close" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lltext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/checkBoxDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/lltext23"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtStatic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="Default Email ID"
                    android:textColor="#5c5c5c"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtEmailIDDevice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="abc@gmail.com"
                    android:textColor="#7c7c7c"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDivider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:src="@drawable/or_sepator" />

        <LinearLayout
            android:id="@+id/lltext1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp" >

            <CheckBox
                android:id="@+id/checkBoxEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/lltext11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtStatic111"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="Enter Your EmailID"
                    android:textColor="#5c5c5c"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter email id..."
                    android:singleLine="true"
                    android:textColor="#7c7c7c"
                    android:textColorHint="#7c7c7c" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.indris.material.RippleView
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/op_submit"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="19sp"
                ripple:alphaFactor="0.7"
                ripple:hover="true"
                ripple:rippleColor="#e5e5e5" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>